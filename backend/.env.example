# Configurações do Servidor
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Configurações do JWT
JWT_SECRET=sua_chave_secreta_aqui_min_32_caracteres
JWT_REFRESH_SECRET=sua_chave_refresh_aqui_min_32_caracteres
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=notesync-api
JWT_AUDIENCE=notesync-client

# Configurações do Google Auth (para login)
GOOGLE_CLIENT_ID=seu_client_id_aqui
GOOGLE_CLIENT_SECRET=seu_client_secret_aqui

# Configurações do Google Drive API (para sincronização)
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Configurações do Armazenamento
DATA_DIR=src/data

# Configurações de Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=logs
